<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_confirm_intercompany_picking_form" model="ir.ui.view">
        <field name="name">confirm.intercompany.picking.form</field>
        <field name="model">confirm.intercompany.picking</field>
        <field name="arch" type="xml">
            <form string="Şirketler Arası Teslimat Onayı">
                <field name="message" nolabel="1"/>
                <field name="picking_id" invisible="1"/>
                <footer>
                    <button name="action_confirm" string="Onayla" type="object" class="btn-primary"/>
                    <button name="action_cancel" string="İptal" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
