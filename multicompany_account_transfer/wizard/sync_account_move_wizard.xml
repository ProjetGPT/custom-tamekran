<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sync_account_move_wizard_form" model="ir.ui.view">
        <field name="name">Multi Company - Account Move Sync</field>
        <field name="model">sync.account.move.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="source_company_id"
                                   required="True"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="sync_move_delete" />
                        </group>
                        <group>
                            <field name="date_to" widget="daterange"
                                   required="True"
                                   options="{'related_end_date': 'date_from'}"/>
                            <field name="date_from" widget="daterange"
                                   required="True"
                                   options="{'related_start_date': 'date_to'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Error Log" attrs="{'invisible': [('error_log', '=', False)]}">
                            <group>
                                <field name="error_log" nolabel="1" readonly="1" widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_generate" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sync_account_move_wizard" model="ir.actions.act_window">
        <field name="name">Multi Company - Account Move Sync</field>
        <field name="res_model">sync.account.move.wizard</field>
        <field name='view_mode'>tree,form</field>
        <field name="view_id" ref="view_sync_account_move_wizard_form"/>
        <field name="target">new</field>
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_manager')])]"/>
        <field name="binding_model_id" ref="base.model_res_company"/>
        <field name="binding_view_types">form</field>
        <field name="context">{'default_source_company_id': active_id}</field>
    </record>
</odoo>